<tryton>
    <data>
        <record model="ir.action.act_window" id="act_all_out_invoice">
            <field name="name">Customer Invoices to merge</field>
            <field name="res_model">account.invoice</field>
            <field name="domain">[('state', '=', 'draft'), ('type', 'in', ('out_invoice', 'out_credit_note'))]</field>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_all_out_invoice_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_invoice.invoice_view_tree"/>
            <field name="act_window" ref="act_all_out_invoice"/>
        </record>
        <record model="ir.action.act_window.view" id="act_all_out_invoice_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_invoice.invoice_view_form"/>
            <field name="act_window" ref="act_all_out_invoice"/>
        </record>
        <menuitem
            parent="account_invoice.menu_invoices"
            action="act_all_out_invoice"
            id="menu_invoice_out_invoice_form"/>

        <record model="ir.action.act_window" id="act_all_in_invoice">
            <field name="name">Supplier Invoices to merge</field>
            <field name="res_model">account.invoice</field>
            <field name="domain">[('state', '=', 'draft'), ('type', 'in', ('in_invoice', 'in_credit_note'))]</field>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_all_in_invoice_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="account_invoice.invoice_view_tree"/>
            <field name="act_window" ref="act_all_in_invoice"/>
        </record>
        <record model="ir.action.act_window.view" id="act_all_in_invoice_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="account_invoice.invoice_view_form"/>
            <field name="act_window" ref="act_all_in_invoice"/>
        </record>
        <menuitem
            parent="account_invoice.menu_invoices"
            action="act_all_in_invoice"
            id="menu_invoice_in_invoice_form"/>

        <record model="ir.ui.view" id="account_invoice_merge_start_form">
            <field name="model">account.invoice.merge.start</field>
            <field name="type">form</field>
            <field name="name">account_invoice_merge_start_form</field>
        </record>

        <record model="ir.action.wizard" id="merger">
            <field name="name">Merge Invoices</field>
            <field name="wiz_name">account.invoice.merge</field>
            <field name="model">account.invoice</field>
        </record>
        <record model="ir.action.keyword" id="merger_keyword">
            <field name="keyword">form_action</field>
            <field name="model">account.invoice,-1</field>
            <field name="action" ref="merger"/>
        </record>
    </data>
</tryton>
